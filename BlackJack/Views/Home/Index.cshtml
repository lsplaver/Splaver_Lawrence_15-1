@model Game

@{
    ViewBag.Title = "Blackjack";
}

<dealer-heading />
<div class="hand mb-4">
    <vc:hand hand-type="Dealer" hand="@Model.Dealer.Hand"></vc:hand>
</div>

<player-heading />
<div class="hand mb-4">
    <vc:hand hand-type="Player" hand="@Model.Player.Hand"></vc:hand>
</div>

<div class="row mb-2">
    <div class="col-2 offset-3">
        <deal-hit-stand asp-action="Deal">
            <deal-button data="@Model.NeedsDeal"></deal-button>
        </deal-hit-stand>
    </div>

    <div class="col-2">
        <deal-hit-stand asp-action="Hit">
            <hit-button data="@Model.NeedsDeal"></hit-button>
        </deal-hit-stand>
    </div>

    <div class="col-2">
        <deal-hit-stand asp-action="Stand">
            <stand-button data="@Model.NeedsDeal"></stand-button>
        </deal-hit-stand>
    </div>

</div>
